<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.nubesn.subway.android.lockandwakeup.MainActivity">

    <Button
        android:id="@+id/acquire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开启自动唤醒"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"/>

    <Button
        android:id="@+id/unacquire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="关闭自动唤醒"
        android:textSize="20sp"
        android:layout_below="@+id/acquire"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/release"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="锁屏"
        android:textSize="20sp"
        android:layout_below="@+id/unacquire"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/unlock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开启清除默认锁屏"
        android:textSize="20sp"
        android:layout_below="@+id/release"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/lock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="清除自定义锁屏"
        android:textSize="20sp"
        android:layout_below="@+id/unlock"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>
</RelativeLayout>
